<table class="w-fit m-auto border-collapse border border-[--withe] shadow-lg rounded-lg overflow-hidden">
    <thead>
        <tr class="bg-[--whiteblack] text-[--white] text-left text-sm font-semibold border border-[--white]  uppercase tracking-wider">
            <th class="px-6 py-3 border-b border-[--white]">Title</th>
            <th class="px-6 py-3 border-b border-[--white]">Date_start</th>
            <th class="px-6 py-3 border-b border-[--white]">Date_end</th>
            <th class="px-6 py-3 border-b border-[--white]">Status</th>
            <th class="px-6 py-3 border-b border-[--white]">Likes</th>
            <th class="px-6 py-3 border-b border-[--white]">Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for road_trip in road_trips %}
            <tr class="hover:bg-[--white] hover:text-[--black] text-[--white] text-xs">
                <td class="px-6 py-4 border-b border-[--white]">{{ road_trip.title }}</td>
                <td class="px-6 py-4 border-b border-[--white]">{{ road_trip.startCheckPoint.dateStart|date('Y-m-d') }}</td>
                <td class="px-6 py-4 border-b border-[--white]">{{ road_trip.endCheckPoint.dateEnd|date('Y-m-d') }}</td>
                <td class="px-6 py-4 border-b border-[--white] text-center">
                    <span 
                        class="inline-block px-2 py-1 text-xs font-medium rounded-full {{ road_trip.status ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' }}">
                        {{ road_trip.status ? 'Yes' : 'No' }}
                    </span>
                </td>
                <td class="px-6 py-4 border-b border-[--white] text-center">{{ road_trip.likes }}</td>
                <td class="px-6 py-4 border-b border-[--white] ">
                    <a href="{{ path('app_road_trip_show', {'id': road_trip.id}) }}" class="text-blue-600 hover:text-blue-900 font-medium mr-2">
                        Show
                    </a>
                    <a href="{{ path('app_road_trip_edit', {'id': road_trip.id}) }}" class="text-yellow-600 hover:text-yellow-900 font-medium">
                       Edit
                    </a>
                    <form class="text-center" method="post" action="{{ path('app_road_trip_delete', {'id': road_trip.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ road_trip.id) }}">
                        <button class="text-red-600 hover:text-red-900 font-medium">Delete</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10" class="text-center px-6 py-4 text-sm text-gray-500">No records found</td>
            </tr>
        {% endfor %}
    </tbody>
</table>
